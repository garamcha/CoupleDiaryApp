<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp">

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="#"
            android:textAlignment="center"
            android:textSize="25dp"/>

        <TextView
            android:id="@+id/list_count"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="000"
            android:textAlignment="center"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/list_date"
            android:layout_width="85dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="22.12.02"
            android:textAlignment="center"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/list_weather"
            android:layout_width="97dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            tools:srcCompat="@drawable/ic_blur" />

        <ImageView
            android:id="@+id/list_emotion"
            android:layout_width="65dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_crying" />

        <!-- " www.flaticon.com  에서  Pixel Perfect 로 만든 아이콘  "-->
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>