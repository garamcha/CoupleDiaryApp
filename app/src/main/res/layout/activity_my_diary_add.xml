<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/add_date"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyDiaryAddActivity">



    <TextView
        android:id="@+id/diray_add_date"
        android:layout_width="412dp"
        android:layout_height="59dp"
        android:text="날짜"
        android:textAlignment="center"
        android:textSize="38sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.004" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="374dp"
        android:layout_height="51dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diray_add_date">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="66dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="날씨"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/weather_sun"
            android:layout_width="94dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_sun"
            />

        <ImageView
            android:id="@+id/weather_cloud"
            android:layout_width="94dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_cloud" />

        <ImageView
            android:id="@+id/weather_rain"
            android:layout_width="94dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_rain" />

        <ImageView
            android:id="@+id/weather_snow"
            android:layout_width="94dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_snow" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="374dp"
        android:layout_height="38dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="102dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:text="기분"
            android:textAlignment="center"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/emotions_grinning"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            android:src="@drawable/ic_grinning" />

        <ImageView
            android:id="@+id/emotions_neutral"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_neutral" />

        <ImageView
            android:id="@+id/emotions_sadness"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_sadness" />

        <ImageView
            android:id="@+id/emotions_disturb"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_disturb" />

        <ImageView
            android:id="@+id/emotions_crying"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_crying"/>

        <ImageView
            android:id="@+id/emotions_angry"
            android:layout_width="104dp"
            android:layout_height="38dp"
            android:layout_weight="1"
            android:alpha="0.3"
            app:srcCompat="@drawable/ic_angry" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="374dp"
        android:layout_height="525dp"
        android:background="@android:color/transparent"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:hint="내용을 입력하세요"
        android:scrollHorizontally="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:src="@android:drawable/ic_menu_save"
        android:backgroundTint="@color/actionBar_color"
        app:tint = "@color/white"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.954"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.911" />

</androidx.constraintlayout.widget.ConstraintLayout>